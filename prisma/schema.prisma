generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  CLIENT
  ADMIN
  OPERATOR
}

enum ShipmentStatus {
  DRAFT
  RECEIVED
  INSPECTING
  PREPPING
  QUALITY_CHECK
  READY_TO_SHIP
  SHIPPED
  DELIVERED
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

enum NotificationType {
  SHIPMENT
  ORDER
  INVOICE
  SYSTEM
}

enum PrepType {
  LABELING
  POLY_BAG
  BUBBLE_WRAP
  BUNDLING
  INSPECTION
  CUSTOM
}

enum StationType {
  RECEIVING
  INSPECTION
  PREP
  QC
  SHIPPING
}

enum StationStatus {
  ACTIVE
  INACTIVE
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskType {
  RECEIVE
  INSPECT
  PREP
  QC
  SHIP
  CUSTOM
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          Role      @default(CLIENT)
  company       String?
  phone         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts         Account[]
  sessions         Session[]
  shipments        Shipment[]
  orders           Order[]
  invoices         Invoice[]
  notifications    Notification[]
  assignedStations Station[]     @relation("StationOperator")
  assignedTasks    Task[]        @relation("TaskAssignee")
  activityLogs     ActivityLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Shipment {
  id             String         @id @default(cuid())
  trackingNumber String         @unique @default(cuid())
  status         ShipmentStatus @default(DRAFT)
  userId         String
  origin         String
  destination    String
  itemCount      Int            @default(0)
  weight         Float?
  notes          String?        @db.Text
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  user  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items ShipmentItem[]
  order Order?
  tasks Task[]
}

model ShipmentItem {
  id          String   @id @default(cuid())
  shipmentId  String
  productName String
  sku         String?
  quantity    Int      @default(1)
  prepType    PrepType @default(LABELING)

  shipment Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
}

model Order {
  id          String      @id @default(cuid())
  userId      String
  shipmentId  String      @unique
  status      OrderStatus @default(PENDING)
  totalAmount Float       @default(0)
  service     String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  shipment Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
  invoice  Invoice?
}

model Invoice {
  id        String        @id @default(cuid())
  userId    String
  orderId   String        @unique
  amount    Float
  status    InvoiceStatus @default(DRAFT)
  dueDate   DateTime
  paidAt    DateTime?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  title     String
  message   String           @db.Text
  read      Boolean          @default(false)
  type      NotificationType @default(SYSTEM)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Station {
  id                 String        @id @default(cuid())
  name               String
  type               StationType
  status             StationStatus @default(ACTIVE)
  assignedOperatorId String?
  capacity           Int           @default(10)
  currentLoad        Int           @default(0)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  assignedOperator User?  @relation("StationOperator", fields: [assignedOperatorId], references: [id], onDelete: SetNull)
  tasks            Task[]
}

model Task {
  id           String       @id @default(cuid())
  title        String
  description  String?      @db.Text
  status       TaskStatus   @default(PENDING)
  priority     TaskPriority @default(MEDIUM)
  type         TaskType     @default(CUSTOM)
  assignedToId String?
  shipmentId   String?
  stationId    String?
  dueDate      DateTime?
  completedAt  DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  assignedTo User?     @relation("TaskAssignee", fields: [assignedToId], references: [id], onDelete: SetNull)
  shipment   Shipment? @relation(fields: [shipmentId], references: [id], onDelete: SetNull)
  station    Station?  @relation(fields: [stationId], references: [id], onDelete: SetNull)
}

model ActivityLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String
  entityType String
  entityId   String?
  metadata   Json?
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}
